#!/usr/bin/env bash

set -e

mkdir -p "$1/bin/"
cp "bin/nginx-$STACK" "$1/bin/nginx"
nginx_version=$(./bin/nginx-$STACK -V 2>&1 | head -1 | awk '{ print $NF }')
echo "-----> nginx-buildpack: Installed ${nginx_version} to app/bin"
cp bin/start-nginx "$1/bin/"
echo '-----> nginx-buildpack: Added start-nginx to app/bin'

mkdir -p "$1/config/nginx"

cp config/mime.types "$1/config/nginx"
echo '-----> nginx-buildpack: Default mime.types copied to app/config/nginx'

if [[ ! -f $1/config/nginx/nginx.conf.erb ]]; then
	cp config/nginx.conf.erb "$1/config/nginx"
	echo '-----> nginx-buildpack: Default config copied to app/config/nginx.'
else
	echo '-----> nginx-buildpack: Custom config found in app/config/nginx.'
fi
exit 0
